# Bluesky Feed Generator Configuration

# Server Configuration
FEEDGEN_PORT=3000
FEEDGEN_LISTENHOST=localhost
FEEDGEN_HOSTNAME=example.com
FEEDGEN_SERVICE_DID=did:web:example.com
FEEDGEN_PUBLISHER_DID=did:example:alice

# Subscription Configuration
FEEDGEN_SUBSCRIPTION_ENDPOINT=wss://bsky.network
FEEDGEN_SUBSCRIPTION_RECONNECT_DELAY=3000

# Database Configuration
# Choose one of: sqlite, postgresql, mongodb
DATABASE_TYPE=sqlite

# SQLite Configuration (default)
SQLITE_LOCATION=./data/feedgen.db
# Use :memory: for in-memory database during development

# PostgreSQL Configuration
# Uncomment and configure if using PostgreSQL
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=feedgen
# POSTGRES_USERNAME=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_SSL=false
# POSTGRES_POOL_SIZE=10

# MongoDB Configuration
# Uncomment and configure if using MongoDB
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DATABASE=feedgen
# MONGODB_MAX_POOL_SIZE=10
# MONGODB_SERVER_SELECTION_TIMEOUT=5000
# MONGODB_SOCKET_TIMEOUT=45000

# Legacy SQLite Configuration (deprecated, use SQLITE_LOCATION instead)
# FEEDGEN_SQLITE_LOCATION=./data/feedgen.db