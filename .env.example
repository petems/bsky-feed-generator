# Database Configuration
# Supported types: sqlite, postgresql, mongodb
DATABASE_TYPE=sqlite

# SQLite Configuration (when DATABASE_TYPE=sqlite)
SQLITE_LOCATION=./data.db

# PostgreSQL Configuration (when DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=feedgen
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_SSL=false
POSTGRES_POOL_SIZE=10

# MongoDB Configuration (when DATABASE_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=feedgen
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# Server Configuration
FEEDGEN_PORT=3000
FEEDGEN_LISTENHOST=localhost
FEEDGEN_HOSTNAME=example.com
FEEDGEN_SERVICE_DID=did:example:alice
FEEDGEN_PUBLISHER_DID=did:example:alice
FEEDGEN_SUBSCRIPTION_ENDPOINT=wss://bsky.social
FEEDGEN_SUBSCRIPTION_RECONNECT_DELAY=3000